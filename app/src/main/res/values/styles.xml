<resources>

    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="android:Theme.Holo">
        <item name="android:buttonStyle">@style/Theme.Calculator.ButtonStyle</item>
    </style>
    
    <!-- Button Style -->
    <style name="Theme.Calculator.ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:textColor">@color/dark_theme_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/grey_theme_normal</item>
    </style>

    <!--Light Theme -->
    <style name="Theme.Calculator.Light" parent="android:Theme.Holo">
        <item name="android:buttonStyle">@style/Theme.Calculator.ButtonStyle.Light</item>
    </style>

    <!-- Crimson Red Theme -->
    <style name="Theme.Calculator.Cred" parent="android:Theme.Holo">
        <item name="android:buttonStyle">@style/Theme.Calculator.ButtonStyle.Cred</item>
    </style>

    <!-- Celadon Green Theme -->
    <style name="Theme.Calculator.Cgreen" parent="android:Theme.Holo">
        <item name="android:buttonStyle">@style/Theme.Calculator.ButtonStyle.Cgreen</item>
    </style>

    <!-- Cerise Pink Theme -->
    <style name="Theme.Calculator.Cpink" parent="android:Theme.Holo">
        <item name="android:buttonStyle">@style/Theme.Calculator.ButtonStyle.Cpink</item>
    </style>

    <!-- Palatinate Purple Theme -->
    <style name="Theme.Calculator.Ppurple" parent="android:Theme.Holo">
        <item name="android:buttonStyle">@style/Theme.Calculator.ButtonStyle.Ppurple</item>
    </style>

    <!--Light theme for Buttons -->
    <style name="Theme.Calculator.ButtonStyle.Light" parent="Theme.Calculator.ButtonStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/light_theme_text_color</item>
    </style>

    <!-- Crimson red theme for Buttons -->
    <style name="Theme.Calculator.ButtonStyle.Cred" parent="Theme.Calculator.ButtonStyle.Light">
        <item name="android:textColor">@color/crimson_red_theme</item>
    </style>

    <!-- Celadon green theme for Buttons -->
    <style name="Theme.Calculator.ButtonStyle.Cgreen" parent="Theme.Calculator.ButtonStyle.Light">
        <item name="android:textColor">@color/celadon_green_theme</item>
    </style>

    <!-- Cerise Pink theme for Buttons -->
    <style name="Theme.Calculator.ButtonStyle.Cpink" parent="Theme.Calculator.ButtonStyle.Light">
        <item name="android:textColor">@color/cerise_pink_theme</item>
    </style>

    <!-- Palatinate Purple theme for Buttons -->
    <style name="Theme.Calculator.ButtonStyle.Ppurple" parent="Theme.Calculator.ButtonStyle.Light">
        <item name="android:textColor">@color/palatinate_purple_theme</item>
    </style>

    <!--Delete and Clear button Style-->
    <style name="Theme.Calculator.ButtonStyle.ImageButton" parent="Theme.Calculator.ButtonStyle">
        <item name="android:background">@color/grey_theme_hex</item>
    </style>

    <style name="Theme.Calculator.ButtonStyle.Operator" parent="Theme.Calculator.ButtonStyle">
        <item name="android:background">@color/grey_theme_hex</item>
    </style>

    <!-- Hex button style -->
    <style name="Theme.Calculator.ButtonStyle.Hex" parent="Theme.Calculator.ButtonStyle">
        <item name="android:background">@color/grey_theme_hex</item>
    </style>

    <!-- Empty Space Style -->
    <style name="Theme.Calculator.Empty" parent="Theme.Calculator.ButtonStyle">
        <item name="android:layout_weight">4</item>
        <item name="android:background">@color/grey_theme_hex</item>
    </style>

    <!-- Display Style -->
    <style name="Theme.Calculator.Display">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/dark_theme_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:padding">@dimen/entryText_padding</item>
        <item name="android:maxHeight">@dimen/display_height</item>
    </style>
</resources>
